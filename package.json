{
  "name": "ai-news-summarizer-poc",
  "version": "1.0.0",
  "description": "A CLI tool to fetch news articles from URLs, summarize them using AI, and save the results to your Obsidian vault",
  "main": "dist/index.js",
  "bin": {
    "ai-news-summarizer": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist/",
    "prepare": "npm run build"
  },
  "keywords": [
    "ai",
    "news",
    "summarizer",
    "obsidian",
    "cli",
    "openai",
    "markdown"
  ],
  "author": "Jeongho Jang <josephjang@gmail.com>",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@types/node": "^24.0.8",
    "@types/puppeteer": "^5.4.7",
    "@types/turndown": "^5.0.5",
    "commander": "^14.0.0",
    "dotenv": "^17.0.0",
    "node-cron": "^4.2.1",
    "openai": "^5.8.2",
    "puppeteer": "^24.11.2",
    "rss-parser": "^3.13.0",
    "ts-node": "^10.9.2",
    "turndown": "^7.2.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0"
  }
}
